    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/signin.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <header class="header">
      <!-- Contenido del encabezado -->
      <img src="img/songofnunu_logo.png" alt="" class='imglogo'/>
      <ul class="ul">
        <li class="list-item">
            <a href="http://localhost:5173/Homepage" class="link">Inicio</a>   
   </ul>   
    </header>

    <main class="form-signin text-center shadow-lg p-3 mb-5">
      <form id="formLogin" action="/login" method="POST">
        <img class="mb-4" src="img/usuario.png" alt="" width="200" height="60">
        <div class="form-floating">
          <input type="text" class="form-control" id="user" name="user" placeholder="User">
          <label for="user">Usuario</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
          <label for="pass">Contrase√±a</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
      </form>

      <br>
      <a href="/register" type="button" class="w-100 btn btn-lg btn-bd-primary">Registrarse</a>
    </main>

    <footer class="footer">
      <img class="logo" src="img/songofnunu_logo.png" alt="manu" /> 
           <div class="social-icons-container">
                <a href="https://github.com/Darkskyn">
                  <img src="img/git.png" class="social-icon">
                </a>
                <a href="https://www.leagueoflegends.com/es-es/">
                  <img src="img/lol.jpg" class="social-icon">
                </a>
           </div>
           <ul class="footer-menu-container">
                <li class="menu-item">WILLUMP Y NUNU</li>
                
           </ul>
           <span class="copyright">&Copy;2024, Darkskyn. All rights reserved</span>
    </footer>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text:'<%= alertMessage %>',
        icon:'<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
      }).then(()=>{
        window.location = '/<%= ruta %>'
      })
    </script>
    <% } %>
  </body>
</html>